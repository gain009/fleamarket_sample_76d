.signUp
  .sign-header
    .sign-header__content
      .sign-header__content__image
        = link_to (image_tag "/logo/logo.png", size: "185x45"), root_path
      %nav.sign-header__content__progress
        %ol
          %li.sign-header__content__progress__text__passive{ id: "first" }
            会員情報
            .sign-header__content__progress__round__passive
          %li.sign-header__content__progress__text__active
            送付先住所入力
            .sign-header__content__progress__round__active
          %li.sign-header__content__progress__text{ id: "end" }
            登録完了
            .sign-header__content__progress__round__passive
  .input
    %h3.input__name
      送付先住所入力
    .input__group
      = form_for(@destination, url: destinations_path, method: :post) do |f| 
        = render "devise/shared/error_messages", resource: @destination
        .input__group__content
          %label.input__group__content__label
            送付先氏名
          %span.input__group__content__required
            必須
          %br
          = f.text_field :destination_family_name, {placeholder:"例）笹錦",class:'input__group__content__name-left'}
          = f.text_field :destination_first_name, {placeholder:"例）太郎",class:'input__group__content__name-rigth'}

        .input__group__content
          %label.input__group__content__label
            送付先氏名（カナ）
          %span.input__group__content__required
            必須
          %br
          = f.text_field :destination_family_name_kana, {placeholder:"例）ササニシキ",class:'input__group__content__name-left'}
          = f.text_field :destination_first_name_kana, {placeholder:"例）太郎",class:'input__group__content__name-rigth'}

        .input__group__content
          %label.input__group__content__label
            郵便番号
          %span.input__group__content__required
            必須
          %br
          = f.text_field :post_code, {autofocus: true, placeholder: "例）ハイフンなし", class: 'input__group__content__box'}

        .input__group__content
          %label.input__group__content__label
            都道府県
          %span.input__group__content__required
            必須
          %br
          = f.collection_select :prefecture_id, Prefecture.all, :id, :name, {include_blank: "選択して下さい", selected: "選択して下さい"}, class: 'input__group__content__box--pulldown'

        .input__group__content
          %label.input__group__content__label
            市区町村
          %span.input__group__content__required
            必須
          %br
          = f.text_field :city, {autofocus: true, placeholder: "例）東大阪市", class: 'input__group__content__box'}

        .input__group__content
          %label.input__group__content__label
            番地
          %span.input__group__content__required
            必須
          %br
          = f.text_field :address, {autofocus: true, placeholder: "例）松原1-4-1", class: 'input__group__content__box'}

        .input__group__content
          %label.input__group__content__label
            建物名
          %span.input__group__content__any
            任意
          %br
          = f.text_field :building_name, {autofocus: true, placeholder: "例）東堂ビルF９", class: 'input__group__content__box'}

        .input__group__content
          %label.input__group__content__label
            電話番号
          %span.input__group__content__any
            任意
          %br
          = f.text_field :phone_number, {autofocus: true, placeholder: "例）090-1234-5678", class: 'input__group__content__box'}
          

        .input__group__content__btn
          = f.submit "登録する", class: "input__group__content__btn__tag"

  = render 'modules/sign_footer'